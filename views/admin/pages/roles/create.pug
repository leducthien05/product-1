extends ../../layout/default.pug

block main 
    h1 Trang tạo phân quyèn
    form(
        action = `${prefixAdmin}/roles/create`
        method="POST"
    )
        div(class="form-group")
            label(for="name") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="name"
                name="name"
                
            )
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control"
                id="desc"
                name="description"
                rows = "1"
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới