extends ../../layout/default.pug

block main 
    h1 Trang tạo phân quyèn
    form(
        action = `${prefixAdmin}/roles/edit/${record.id}?_method=PATCH`
        method="POST"
    )
        div(class="form-group")
            label(for="name") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="name"
                name="name"
                value=record.name
            )
        div(class="form-group")
            label(for="desc") Mô tả
            input(
                class="form-control"
                id="desc"
                name="description"
                rows = "1"
                value=record.description
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhập